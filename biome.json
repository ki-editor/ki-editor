{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": [
            "build",
            "node_modules",
            "dist",
            "src/protocol/types.ts",
            "target",
            "docs/static",
            "docs/.docusaurus"
        ]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "correctness": {
                "noUnusedVariables": "error",
                "noUnusedImports": "error"
            },
            "complexity": {
                "noForEach": "off"
            },
            "a11y": {
                "useButtonType": "off",
                "useAltText": "off"
            },
            "suspicious": { "noArrayIndexKey": "off" }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double"
        }
    }
}
