        "keybindings": [
            {
                "command": "ki.selectMode",
                "key": "ctrl+k ctrl+s",
                "mac": "cmd+k cmd+s",
                "when": "editorTextFocus && ki.editorMode == 'normal'"
            },
            {
                "command": "ki.selectMode.word",
                "key": "ctrl+k ctrl+w",
                "mac": "cmd+k cmd+w",
                "when": "editorTextFocus && ki.editorMode == 'normal'"
            },
            {
                "command": "ki.selectMode.token",
                "key": "ctrl+k ctrl+t",
                "mac": "cmd+k cmd+t",
                "when": "editorTextFocus && ki.editorMode == 'normal'"
            },
            {
                "command": "ki.selectMode.character",
                "key": "ctrl+k ctrl+c",
                "mac": "cmd+k cmd+c",
                "when": "editorTextFocus && ki.editorMode == 'normal'"
